{
  "manifest_version": 2,

  "name": "MonoLife Helper",
  "version": "0.1",
  "description": "Помогает в игре MonoLife",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "webRequest",
    "storage",
    "cookies",
    "webRequestBlocking",
    "management"
  ],
  "author": "NextNextDev",
  "background": {
    "page": "back/main.html"
  },
  "browser_action": {
    "default_title": "MonoLife Helper",
    "default_popup": "main/main.html"
  },
  "content_scripts": [
    {
      "matches": ["https://40e86e96-d64b-422b-8f9d-246a45f6d908.selcdn.net/*"],
      "run_at": "document_end",
      "all_frames": true,
      "js": ["lib/js/jquery.js", "front/monopoly.js"]
    }
  ],
  "icons": { 
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png" 
  }
}